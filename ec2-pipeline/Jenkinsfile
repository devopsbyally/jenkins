pipeline {
    agent any
    parameters {
  choice choices: ['start', 'reboot', 'stop', 'terminate'], description: 'perform action for ec2', name: 'ACTION'
  string description: 'instance id', name: 'INSTANCE_ID'
}
    environment { 
        SNS_TOPIC_ARN = 'arn:aws:sns:us-east-2:010526277866:pipeline-sns'
    }

    stages {
        stage('perform ec2 action') {
            steps {
                echo "Your ${params.INSTANCE_ID} is now going to ${params.ACTION}"
                sh "aws ec2 ${params.ACTION}-instances --instance-ids ${params.INSTANCE_ID}"
            }
        }
    }
        post { 
        always { 
            sh "aws sns publish --topic-arn ${SNS_TOPIC_ARN} --message "â„¹ï¸ Jenkins Pipeline Completed!\nğŸ¯ EC2 Action: $ACTION\nğŸ”¹ Instance ID: $INSTANCE_ID\nğŸ“… Timestamp: $(date)""
        }
        success { 
            sh "aws sns publish --topic-arn ${SNS_TOPIC_ARN} --message "â„¹ï¸ Jenkins Pipeline Successful!\nğŸ¯ EC2 Action: $ACTION\nğŸ”¹ Instance ID: $INSTANCE_ID\nğŸ“… Timestamp: $(date)""
        }
        failure { 
            sh "aws sns publish --topic-arn ${SNS_TOPIC_ARN} --message "â„¹ï¸ Jenkins Pipeline Failed!\nğŸ¯ EC2 Action: $ACTION\nğŸ”¹ Instance ID: $INSTANCE_ID\nğŸ“… Timestamp: $(date)""
        }
    }
}
